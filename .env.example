# RompMusic Server Configuration
# Copy to .env and customize

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://rompmusic:rompmusic@localhost:5432/rompmusic

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=change-me-to-a-random-string-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Music library path
MUSIC_PATH=/music

# Optional: automated library scan every N hours (0 = disabled). Example: 24 for daily
AUTO_SCAN_INTERVAL_HOURS=0

# Optional: run beets fetch-art in MUSIC_PATH every N hours (0 = disabled). Requires beet on PATH
BEETS_AUTO_INTERVAL_HOURS=0

# Server
HOST=0.0.0.0
PORT=8080
BASE_URL=http://localhost:8080

# Transcoding (FFmpeg paths)
FFMPEG_PATH=ffmpeg

# Last.fm API key (optional; free at last.fm/api/account/create)
# - Enables "similar tracks" and "recommended for you" based on Last.fm data
LASTFM_API_KEY=

# Email (optional; for password reset, verification)
# Example for Spacemail: mail.spacemail.com, port 587
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
